<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:text="hello"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:id="@+id/collect_chinese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:text="noway"
        android:textSize="15sp"
        android:id="@+id/collect_english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        />

    </LinearLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/grey_collect_done"
        android:layout_centerInParent="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_star_grey600_24dp"
        />
        <ImageView
            android:id="@+id/grey_collect"
            android:layout_centerInParent="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_star_outline_grey600_24dp"
            />


    </RelativeLayout>



</LinearLayout>